// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"           // ⬅️ was "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  role         String?
  workPhone    String?
  phonePrivate Boolean  @default(true)
  program      String?
  photoUrl     String?
  slug         String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  id         String   @id
  email      String
  tokenHash  String
  purpose    TokenPurpose
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([email])
  @@index([purpose])
  @@index([expiresAt])
  @@unique([tokenHash, purpose])
}

enum TokenPurpose {
  VERIFY_EMAIL
  RESET_PASSWORD
  SET_PASSWORD
}
